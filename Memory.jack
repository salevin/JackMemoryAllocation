        Memory[seg + newSeg] = size + 1;
        return  seg + newSeg + 1;
      }
    }

    /** De-allocates the given object and frees its space. */
    function void deAlloc(int object) {
      var int seg, size, freeSeg, nextSeg, prevSeg;
      seg = object - 1;
      size = Memory[seg];
      prevSeg = freeList;
      freeSeg = Memory[prevSeg + 1];
      while (freeSeg < object){
